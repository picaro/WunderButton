<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.op.wunderbutton.SelectRoomActivity"
    android:background="@drawable/wood_bg"
    android:weightSum="1">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="250px"
        android:padding="5dip">

        <ImageButton
            android:layout_width="101dp"
            android:layout_height="141dp"
            android:layout_weight="0.5"
            android:id="@+id/img_kitchen"
            android:src="@drawable/kitchen"
            android:onClick="onClick"
            android:layout_span="0" />

        <ImageButton
            android:onClick="onClick"
            android:layout_width="101dp"
            android:layout_height="141dp"
            android:id="@+id/img_bath_wc"
            android:layout_weight="0.5"
            android:src="@drawable/wc_bath"
            android:layout_span="0" />

    </TableRow>


    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:minHeight="50px"
        android:padding="5dip"
        android:minWidth="50px"
        >

        <TextView
            android:textColor="@android:color/white"
            android:layout_width="101dp"
            android:layout_height="30dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Kitchen"
            android:id="@+id/textView"
            android:layout_span="0"
            />

        <TextView
            android:textColor="@android:color/white"
            android:layout_width="101dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_weight="0.5"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Bath an WC"
            android:id="@+id/textView2"
            android:layout_span="0" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="250px"
        android:padding="5dip"
        android:minWidth="50px"
        >

        <ImageButton
            android:onClick="onClick"
            android:layout_width="101dp"
            android:layout_height="141dp"
            android:id="@+id/img_bath"
            android:layout_weight="0.5"
            android:layout_span="0"
            android:src="@drawable/bath" />

        <ImageButton
            android:onClick="onClick"
            android:layout_width="101dp"
            android:layout_height="141dp"
            android:id="@+id/img_wc"
            android:layout_weight="0.5"
            android:src="@drawable/wc"
            android:layout_span="0" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:minHeight="50px"
        android:padding="5dip"
        android:minWidth="50px"
        >

        <TextView
            android:textColor="@android:color/white"
            android:layout_width="101dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_weight="0.5"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Beth"
            android:id="@+id/textView4"
            android:layout_span="0" />

        <TextView
            android:layout_width="101dp"
            android:layout_height="30dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="WC"
            android:id="@+id/textView5"
            android:layout_span="0" />
    </TableRow>

</TableLayout>



